{
  "name": "frontend-tablo",
  "version": "1.0.0",
  "description": "PhotoStack - Photo Selection & Collaboration Tool",
  "author": "PhotoStack Team",
  "main": "electron/dist/main.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "vitest run --config vite.config.mts",
    "test:watch": "vitest --config vite.config.mts",
    "test:coverage": "vitest run --coverage --config vite.config.mts",
    "test:ui": "vitest --ui --config vite.config.mts",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:headed": "playwright test --headed",
    "e2e:debug": "playwright test --debug",
    "electron:compile": "tsc -p electron/tsconfig.json",
    "electron:dev": "npm run electron:compile && concurrently \"npm run start\" \"wait-on http://localhost:4205 && NODE_ENV=development electron .\"",
    "electron:build": "npm run build && npm run electron:compile && electron-builder --mac",
    "electron:build:win": "npm run build && npm run electron:compile && electron-builder --win",
    "electron:build:linux": "npm run build && npm run electron:compile && electron-builder --linux",
    "electron:build:all": "npm run build && npm run electron:compile && electron-builder --mac --win --linux",
    "electron:build:dir": "npm run build && npm run electron:compile && electron-builder --mac --dir",
    "cap:sync": "npx cap sync",
    "cap:ios": "npx cap open ios",
    "cap:android": "npx cap open android",
    "cap:build:ios": "npm run build && npx cap sync ios",
    "cap:build:android": "npm run build && npx cap sync android",
    "cap:run:ios": "npx cap run ios --livereload --external",
    "cap:run:android": "npx cap run android --livereload --external",
    "postinstall": "electron-builder install-app-deps"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^21.1.1",
    "@angular/cdk": "^21.1.1",
    "@angular/common": "^21.1.1",
    "@angular/compiler": "^21.1.1",
    "@angular/core": "^21.1.1",
    "@angular/forms": "^21.1.1",
    "@angular/material": "^21.1.1",
    "@angular/platform-browser": "^21.1.1",
    "@angular/platform-browser-dynamic": "^21.1.1",
    "@angular/router": "^21.1.1",
    "@capacitor/android": "^6.2.1",
    "@capacitor/app": "^6.0.3",
    "@capacitor/camera": "^6.1.3",
    "@capacitor/cli": "^6.2.1",
    "@capacitor/core": "^6.2.1",
    "@capacitor/device": "^6.0.3",
    "@capacitor/filesystem": "^6.0.4",
    "@capacitor/haptics": "^6.0.3",
    "@capacitor/ios": "^6.2.1",
    "@capacitor/keyboard": "^6.0.4",
    "@capacitor/network": "^6.0.4",
    "@capacitor/preferences": "^6.0.4",
    "@capacitor/splash-screen": "^6.0.4",
    "@capacitor/status-bar": "^6.0.3",
    "dompurify": "^3.3.1",
    "laravel-echo": "^2.3.0",
    "lucide-angular": "^0.562.0",
    "ngx-editor": "^19.0.0-beta.1",
    "ngx-quill": "^30.0.1",
    "pusher-js": "^8.4.0",
    "quill": "^2.0.3",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@analogjs/vite-plugin-angular": "^2.2.2",
    "@angular-devkit/build-angular": "^21.1.1",
    "@angular/cli": "~21.1.1",
    "@angular/compiler-cli": "^21.1.1",
    "@playwright/test": "^1.57.0",
    "@testing-library/angular": "^19.0.0",
    "@testing-library/dom": "^10.0.0",
    "@testing-library/user-event": "^14.5.0",
    "@vitest/ui": "^2.1.0",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.1.0",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "jsdom": "^25.0.0",
    "msw": "^2.12.7",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "typescript": "~5.9.3",
    "vite": "^6.0.0",
    "vitest": "^2.1.0",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.photostack.app",
    "productName": "PhotoStack",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/dist/**/*"
    ],
    "mac": {
      "category": "public.app-category.photography",
      "icon": "electron/assets/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "universal"
          ]
        }
      ],
      "darkModeSupport": true,
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "electron/entitlements.mac.plist",
      "entitlementsInherit": "electron/entitlements.mac.plist"
    },
    "dmg": {
      "title": "${productName}",
      "icon": "electron/assets/icon.icns",
      "iconSize": 100,
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 140,
          "y": 180,
          "type": "file"
        },
        {
          "x": 400,
          "y": 180,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "electron/assets/icon.ico",
      "uninstallerIcon": "electron/assets/icon.ico",
      "installerHeaderIcon": "electron/assets/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "electron/assets/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "electron/assets/icons",
      "category": "Graphics"
    }
  }
}
